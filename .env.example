# API Keys
# Required for AI chat functionality - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# Required for RAG embeddings and semantic search - Get from https://platform.openai.com/api-keys
# Without this key, Co-Pilot Chat will use cache fallback (works but less accurate)
# Cost: ~$0.02 per 1M tokens (very affordable for embeddings)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Chatwoot Integration (Optional - for CS Portal)
# Get API token from Profile Settings in Chatwoot dashboard
# Account ID can be found in the URL: app.chatwoot.com/app/accounts/{ACCOUNT_ID}
CHATWOOT_API_URL=https://app.chatwoot.com
CHATWOOT_API_TOKEN=your_api_token_here
CHATWOOT_ACCOUNT_ID=your_account_id

# Server Configuration
PORT=5000
NODE_ENV=development

# Database (Optional - currently using in-memory storage)
DATABASE_URL=